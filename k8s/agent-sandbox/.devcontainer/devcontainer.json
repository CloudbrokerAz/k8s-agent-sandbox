{
  "name": "Agent Sandbox - Claude Code",
  "build": {
    "dockerfile": "../../Dockerfile.production",
    "context": "../../../",
    "args": {
      "TZ": "${localEnv:TZ:UTC}"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {},
    "ghcr.io/coder/devcontainer-features/code-server:1": {
      "port": 13337,
      "host": "0.0.0.0"
    }
  },
  "postCreateCommand": "claude --version && echo 'Agent Sandbox with Claude Code ready'",
  "appPort": ["13337:13337"],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "hashicorp.terraform",
        "Anthropic.claude-code",
        "redhat.vscode-yaml",
        "HashiCorp.HCL",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=agent-sandbox-bashhistory,target=/commandhistory,type=volume",
    "source=agent-sandbox-claude-config,target=/home/node/.claude,type=volume"
  ],
  "remoteEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "CLAUDE_GITHUB_MCP_ENABLED": "true",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "TFE_TOKEN": "${localEnv:TFE_TOKEN}",
    "TF_TOKEN_app_terraform_io": "${localEnv:TFE_TOKEN}",
    "AWS_ACCESS_KEY_ID": "${localEnv:AWS_ACCESS_KEY_ID}",
    "AWS_SECRET_ACCESS_KEY": "${localEnv:AWS_SECRET_ACCESS_KEY}",
    "AWS_SESSION_TOKEN": "${localEnv:AWS_SESSION_TOKEN}",
    "AWS_SESSION_EXPIRATION": "${localEnv:AWS_SESSION_EXPIRATION}",
    "VAULT_RADAR_LICENSE": "${localEnv:VAULT_RADAR_LICENSE:}",
    "LANGFUSE_HOST": "${localEnv:LANGFUSE_HOST}",
    "LANGFUSE_PUBLIC_KEY": "${localEnv:LANGFUSE_PUBLIC_KEY}",
    "LANGFUSE_SECRET_KEY": "${localEnv:LANGFUSE_SECRET_KEY}"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace"
}
