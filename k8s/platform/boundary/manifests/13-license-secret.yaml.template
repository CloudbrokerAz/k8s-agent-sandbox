# Boundary Enterprise License Secret
#
# To use this template:
# 1. Copy to 13-license-secret.yaml
# 2. Replace <BASE64_ENCODED_LICENSE> with your license (base64 encoded)
#
# Or use the create-boundary-secrets.sh script with BOUNDARY_LICENSE_FILE env var:
#   BOUNDARY_LICENSE_FILE=/path/to/license.hclic ./create-boundary-secrets.sh
#
apiVersion: v1
kind: Secret
metadata:
  name: boundary-license
  namespace: boundary
  labels:
    app: boundary
    component: license
type: Opaque
data:
  # Base64 encoded license file content
  license: <BASE64_ENCODED_LICENSE>
